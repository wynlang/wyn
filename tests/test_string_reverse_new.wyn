// TDD Test: String reverse (NEW FEATURE)

fn test_reverse_simple() -> int {
    var s: string = "hello"
    var result = s.reverse()
    var expected: string = "olleh"
    if result == expected {
        print("PASS: reverse simple\n")
        return 0
    }
    return 1
}

fn test_reverse_single() -> int {
    var s: string = "a"
    var result = s.reverse()
    var expected: string = "a"
    if result == expected {
        print("PASS: reverse single\n")
        return 0
    }
    return 1
}

fn test_reverse_empty() -> int {
    var s: string = ""
    var result = s.reverse()
    var expected: string = ""
    if result == expected {
        print("PASS: reverse empty\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== String Reverse Tests (NEW FEATURE) ===\n")
    var failures = 0
    failures = failures + test_reverse_simple()
    failures = failures + test_reverse_single()
    failures = failures + test_reverse_empty()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
