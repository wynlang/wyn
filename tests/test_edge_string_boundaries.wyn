// TDD Test: Edge cases - string boundaries

fn test_string_single_char() -> int {
    var s: string = "a"
    if s.len() == 1 {
        print("PASS: string single char\n")
        return 0
    }
    return 1
}

fn test_string_whitespace_only() -> int {
    var s: string = "   "
    var result = s.trim()
    var expected: string = ""
    if result == expected {
        print("PASS: string whitespace only\n")
        return 0
    }
    return 1
}

fn test_string_repeat_zero() -> int {
    var s: string = "test"
    var result = s.repeat(0)
    var expected: string = ""
    if result == expected {
        print("PASS: string repeat zero\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: String Boundaries ===\n")
    var failures = 0
    failures = failures + test_string_single_char()
    failures = failures + test_string_whitespace_only()
    failures = failures + test_string_repeat_zero()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
