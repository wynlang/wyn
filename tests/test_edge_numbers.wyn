// TDD Test: Edge cases - numbers

fn test_zero() -> int {
    var n = 0
    if n == 0 {
        print("PASS: zero\n")
        return 0
    }
    return 1
}

fn test_negative_zero() -> int {
    var n = -0
    if n == 0 {
        print("PASS: negative zero\n")
        return 0
    }
    return 1
}

fn test_large_number() -> int {
    var n = 999999
    if n == 999999 {
        print("PASS: large number\n")
        return 0
    }
    return 1
}

fn test_negative_large() -> int {
    var n = -999999
    if n == -999999 {
        print("PASS: negative large\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Numbers ===\n")
    var failures = 0
    failures = failures + test_zero()
    failures = failures + test_negative_zero()
    failures = failures + test_large_number()
    failures = failures + test_negative_large()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
