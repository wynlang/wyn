// TDD Test: Integration test combining multiple features

fn test_integration_all() -> int {
    // Variables
    var x = 10
    var y = 20
    
    // Arithmetic
    var sum = x + y
    
    // Comparison
    if sum == 30 {
        // Arrays
        var arr = [1, 2, 3]
        arr.push(4)
        
        // Strings
        var s = "test"
        
        // Loops
        var count = 0
        var i = 0
        while i < 3 {
            count = count + 1
            i = i + 1
        }
        
        if count == 3 {
            print("PASS: integration all features\n")
            return 0
        }
    }
    return 1
}

