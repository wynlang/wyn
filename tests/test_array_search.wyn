// TDD Test: Array contains

fn test_array_contains_true() -> int {
    var arr: [int] = [1, 2, 3, 4, 5]
    var has_three = arr.contains(3)
    if has_three == 1 {
        print("PASS: array contains true\n")
        return 0
    }
    return 1
}

fn test_array_contains_false() -> int {
    var arr: [int] = [1, 2, 3]
    var has_ten = arr.contains(10)
    if has_ten == 0 {
        print("PASS: array contains false\n")
        return 0
    }
    return 1
}

fn test_array_contains_first() -> int {
    var arr: [int] = [10, 20, 30]
    var has_first = arr.contains(10)
    if has_first == 1 {
        print("PASS: array contains first\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Array Contains Tests ===\n")
    var failures = 0
    failures = failures + test_array_contains_true()
    failures = failures + test_array_contains_false()
    failures = failures + test_array_contains_first()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
