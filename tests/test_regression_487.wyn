// TDD Test: Regression test 487

fn test_regression_487() -> int {
    var x = 487
    var y = x * 2
    if y == 974 {
        print("PASS: regression 487\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Regression Test 487 ===\n")
    var failures = test_regression_487()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
