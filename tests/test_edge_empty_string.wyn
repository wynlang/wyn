// TDD Test: Edge cases - empty string operations

fn test_empty_string_len() -> int {
    var s: string = ""
    if s.len() == 0 {
        print("PASS: empty string len\n")
        return 0
    }
    return 1
}

fn test_empty_string_contains() -> int {
    var s: string = ""
    var result = s.contains("x")
    if result == 0 {
        print("PASS: empty string contains\n")
        return 0
    }
    return 1
}

fn test_empty_string_upper() -> int {
    var s: string = ""
    var result = s.upper()
    var expected: string = ""
    if result == expected {
        print("PASS: empty string upper\n")
        return 0
    }
    return 1
}

fn test_empty_string_trim() -> int {
    var s: string = ""
    var result = s.trim()
    var expected: string = ""
    if result == expected {
        print("PASS: empty string trim\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Empty String ===\n")
    var failures = 0
    failures = failures + test_empty_string_len()
    failures = failures + test_empty_string_contains()
    failures = failures + test_empty_string_upper()
    failures = failures + test_empty_string_trim()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
