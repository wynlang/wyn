// TDD Test: String comparison operations

fn test_string_equals_true() -> int {
    var a = "hello"
    var b = "hello"
    if a == b {
        print("PASS: string equals true\n")
        return 0
    }
    print("FAIL: string equals true\n")
    return 1
}

fn test_string_equals_false() -> int {
    var a = "hello"
    var b = "world"
    if a != b {
        print("PASS: string equals false\n")
        return 0
    }
    print("FAIL: string equals false\n")
    return 1
}

fn test_string_empty_equals() -> int {
    var a = ""
    var b = ""
    if a == b {
        print("PASS: string empty equals\n")
        return 0
    }
    print("FAIL: string empty equals\n")
    return 1
}

fn main() -> int {
    print("=== String Comparison Tests ===\n")
    var failures = 0
    failures = failures + test_string_equals_true()
    failures = failures + test_string_equals_false()
    failures = failures + test_string_empty_equals()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
