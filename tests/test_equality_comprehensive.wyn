// TDD Test: Equality comprehensive

fn test_int_equality() -> int {
    if 42 == 42 {
        print("PASS: int equality\n")
        return 0
    }
    return 1
}

fn test_int_inequality() -> int {
    if 5 != 10 {
        print("PASS: int inequality\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Equality Tests ===\n")
    var failures = 0
    failures = failures + test_int_equality()
    failures = failures + test_int_inequality()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
