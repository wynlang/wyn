// TDD Test: Integer edge cases

fn test_int_zero() -> int {
    var n = 0
    var abs_val = n.abs()
    if abs_val == 0 {
        print("PASS: int.abs() zero\n")
        return 0
    }
    print("FAIL: int.abs() zero\n")
    return 1
}

fn test_int_max_same() -> int {
    var a = 10
    var result = a.max(10)
    if result == 10 {
        print("PASS: int.max() same values\n")
        return 0
    }
    print("FAIL: int.max() same values\n")
    return 1
}

fn test_int_min_same() -> int {
    var a = 5
    var result = a.min(5)
    if result == 5 {
        print("PASS: int.min() same values\n")
        return 0
    }
    print("FAIL: int.min() same values\n")
    return 1
}

fn test_int_max_negative() -> int {
    var a = -10
    var result = a.max(-5)
    if result == -5 {
        print("PASS: int.max() negative\n")
        return 0
    }
    print("FAIL: int.max() negative\n")
    return 1
}

fn test_int_min_negative() -> int {
    var a = -5
    var result = a.min(-10)
    if result == -10 {
        print("PASS: int.min() negative\n")
        return 0
    }
    print("FAIL: int.min() negative\n")
    return 1
}

fn main() -> int {
    print("=== Integer Edge Cases Tests ===\n")
    var failures = 0
    failures = failures + test_int_zero()
    failures = failures + test_int_max_same()
    failures = failures + test_int_min_same()
    failures = failures + test_int_max_negative()
    failures = failures + test_int_min_negative()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
