// TDD Test: Edge cases - array boundaries

fn test_array_first_single() -> int {
    var arr: [int] = [42]
    var first = arr.first()
    if first == 42 {
        print("PASS: array first single\n")
        return 0
    }
    return 1
}

fn test_array_last_single() -> int {
    var arr: [int] = [99]
    var last = arr.last()
    if last == 99 {
        print("PASS: array last single\n")
        return 0
    }
    return 1
}

fn test_array_index_bounds() -> int {
    var arr: [int] = [1, 2, 3]
    var first = arr[0]
    var last = arr[2]
    if first == 1 {
        if last == 3 {
            print("PASS: array index bounds\n")
            return 0
        }
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Array Boundaries ===\n")
    var failures = 0
    failures = failures + test_array_first_single()
    failures = failures + test_array_last_single()
    failures = failures + test_array_index_bounds()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
