// TDD Test: String pad_left and pad_right

fn test_pad_left() -> int {
    var text = "hi"
    var padded = text.pad_left(5, " ")
    var expected = "   hi"
    if padded == expected {
        print("PASS: string.pad_left()\n")
        return 0
    }
    print("FAIL: pad_left(5, ' ') expected '   hi'\n")
    return 1
}

fn test_pad_right() -> int {
    var text = "hi"
    var padded = text.pad_right(5, " ")
    var expected = "hi   "
    if padded == expected {
        print("PASS: string.pad_right()\n")
        return 0
    }
    print("FAIL: pad_right(5, ' ') expected 'hi   '\n")
    return 1
}

fn test_pad_left_zero() -> int {
    var text = "42"
    var padded = text.pad_left(4, "0")
    var expected = "0042"
    if padded == expected {
        print("PASS: string.pad_left() with zero\n")
        return 0
    }
    print("FAIL: pad_left(4, '0') expected '0042'\n")
    return 1
}

fn test_pad_no_change() -> int {
    var text = "hello"
    var padded = text.pad_left(3, " ")
    var expected = "hello"
    if padded == expected {
        print("PASS: string.pad_left() no change\n")
        return 0
    }
    print("FAIL: pad_left(3, ' ') should not change 'hello'\n")
    return 1
}

fn main() -> int {
    print("=== String Pad Tests ===\n")
    var failures = 0
    failures = failures + test_pad_left()
    failures = failures + test_pad_right()
    failures = failures + test_pad_left_zero()
    failures = failures + test_pad_no_change()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
