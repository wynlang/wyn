// TDD Test: String case transformations

fn test_string_upper() -> int {
    var text = "hello"
    var upper = text.upper()
    var expected = "HELLO"
    if upper == expected {
        print("PASS: string.upper()\n")
        return 0
    }
    print("FAIL: string.upper()\n")
    return 1
}

fn test_string_lower() -> int {
    var text = "WORLD"
    var lower = text.lower()
    var expected = "world"
    if lower == expected {
        print("PASS: string.lower()\n")
        return 0
    }
    print("FAIL: string.lower()\n")
    return 1
}

fn test_string_upper_mixed() -> int {
    var text = "HeLLo"
    var upper = text.upper()
    var expected = "HELLO"
    if upper == expected {
        print("PASS: string.upper() mixed case\n")
        return 0
    }
    print("FAIL: string.upper() mixed case\n")
    return 1
}

fn test_string_lower_mixed() -> int {
    var text = "WoRLd"
    var lower = text.lower()
    var expected = "world"
    if lower == expected {
        print("PASS: string.lower() mixed case\n")
        return 0
    }
    print("FAIL: string.lower() mixed case\n")
    return 1
}

fn main() -> int {
    print("=== String Case Tests ===\n")
    var failures = 0
    failures = failures + test_string_upper()
    failures = failures + test_string_lower()
    failures = failures + test_string_upper_mixed()
    failures = failures + test_string_lower_mixed()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
