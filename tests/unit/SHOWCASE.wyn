// Wyn Language Showcase - All Working Features
// Demonstrates 50% completion milestone

// Feature 1: Structs
struct Point {
    x: int,
    y: int
}

// Feature 2: Trait Definitions (without parameters)
trait Drawable {
    fn draw() -> int;
}

// Feature 3: Basic Functions
fn add(a: int, b: int) -> int {
    return a + b;
}

// Feature 4: Generic Functions
fn identity<T>(x: T) -> T {
    return x;
}

// Feature 5: Optional Creation
fn maybe_value() -> int {
    var x = some(42);
    var y = none;
    return 1;
}

fn main() -> int {
    // Feature 6: Arithmetic
    var sum = add(10, 5);
    
    // Feature 7: Structs with field access
    var p = Point { x: 3, y: 4 };
    
    // Feature 8: Generics
    var val = identity(42);
    
    // Feature 9: Arrays
    var arr = [10, 20, 30];
    var arr_val = arr[1];
    
    // Feature 10: Match Expressions
    var match_result = match sum {
        15 => arr_val,
        _ => 0
    };
    
    // Feature 11: Match Statements
    match p.x {
        3 => return match_result,
        _ => return 0
    }
}
