// TDD Test: Regression test 499

fn test_regression_499() -> int {
    var x = 499
    var y = x * 2
    if y == 998 {
        print("PASS: regression 499\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Regression Test 499 ===\n")
    var failures = test_regression_499()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
