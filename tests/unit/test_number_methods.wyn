// Phase 3 Task 3.3: Number Method Tests

fn test_int_conversion() -> int {
    var num = 42;
    var str = num.to_string();
    var flt = num.to_float();
    // str should be "42", flt should be 42.0
    return 0;
}

fn test_int_math() -> int {
    var num = -5;
    var abs_val = num.abs();
    var squared = num.pow(2);
    var min_val = num.min(10);
    var max_val = num.max(10);
    var clamped = num.clamp(0, 100);
    // abs_val=5, squared=25, min_val=-5, max_val=10, clamped=0
    return abs_val;
}

fn test_int_checks() -> int {
    var num = 42;
    var even = num.is_even();
    var odd = num.is_odd();
    var pos = num.is_positive();
    var neg = num.is_negative();
    var zero = num.is_zero();
    // even=1, odd=0, pos=1, neg=0, zero=0
    return even;
}

fn test_float_conversion() -> int {
    var num = 3.14;
    var str = num.to_string();
    var int_val = num.to_int();
    // str should be "3.14", int_val should be 3
    return int_val;
}

fn test_float_rounding() -> int {
    var num = 3.7;
    var rounded = num.round();
    var floored = num.floor();
    var ceiled = num.ceil();
    // rounded=4.0, floored=3.0, ceiled=4.0
    return floored.to_int();
}

fn test_float_math() -> int {
    var num = 5.5;
    var abs_val = num.abs();
    var squared = num.pow(2.0);
    var nine = 9.0;
    var sqrt_val = nine.sqrt();
    var min_val = num.min(10.0);
    var max_val = num.max(10.0);
    // abs_val=5.5, squared=30.25, sqrt_val=3.0, min_val=5.5, max_val=10.0
    return sqrt_val.to_int();
}

fn test_float_checks() -> int {
    var num = 3.14;
    var pos = num.is_positive();
    var neg = num.is_negative();
    var finite = num.is_finite();
    // pos=1, neg=0, finite=1
    return pos;
}

fn test_float_trig() -> int {
    var angle = 0.0;
    var sin_val = angle.sin();
    var cos_val = angle.cos();
    var one = 1.0;
    var exp_val = one.exp();
    var e = 2.718;
    var log_val = e.log();
    // sin_val=0.0, cos_val=1.0, exp_val=2.718, log_val=1.0
    return cos_val.to_int();
}

fn main() -> int {
    test_int_conversion();
    var abs_val = test_int_math();
    var even = test_int_checks();
    var int_val = test_float_conversion();
    var floored = test_float_rounding();
    var sqrt_val = test_float_math();
    var pos = test_float_checks();
    var cos_val = test_float_trig();
    return abs_val + even + int_val + floored + sqrt_val + pos + cos_val;
}
