// TDD Test: Scope operations

fn test_local_scope() -> int {
    var x = 10
    if 1 == 1 {
        var y = 20
        if x == 10 {
            print("PASS: local scope\n")
            return 0
        }
    }
    print("FAIL: local scope\n")
    return 1
}

fn test_function_scope() -> int {
    var x = 5
    if x == 5 {
        print("PASS: function scope\n")
        return 0
    }
    print("FAIL: function scope\n")
    return 1
}

fn main() -> int {
    print("=== Scope Tests ===\n")
    var failures = 0
    failures = failures + test_local_scope()
    failures = failures + test_function_scope()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
