// TDD Test: Assignment operations

fn test_simple_assignment() -> int {
    var x = 10
    if x == 10 {
        print("PASS: simple assignment\n")
        return 0
    }
    return 1
}

fn test_reassignment() -> int {
    var x = 5
    x = 10
    if x == 10 {
        print("PASS: reassignment\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Assignment Tests ===\n")
    var failures = 0
    failures = failures + test_simple_assignment()
    failures = failures + test_reassignment()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
