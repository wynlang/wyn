fn main() -> int {
    print("=== String Trim Tests ===\n")
    var failures = 0
    failures = failures + test_string_trim_both()
    failures = failures + test_string_trim_left_only()
    failures = failures + test_string_trim_right_only()
    failures = failures + test_string_trim_no_spaces()
    failures = failures + test_string_trim_tabs_newlines()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
