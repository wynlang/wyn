// Comprehensive Standard Library Test

// Math module functions
fn abs_test(x: int) -> int {
    if x < 0 { return 0 - x; }
    return x;
}

fn max_test(a: int, b: int) -> int {
    if a > b { return a; }
    return b;
}

fn min_test(a: int, b: int) -> int {
    if a < b { return a; }
    return b;
}

fn wyn_pow(x: int, n: int) -> int {
    var res = 1;
    var i = 0;
    while i < n {
        res = res * x;
        i = i + 1;
    }
    return res;
}

fn main() -> int {
    // Test math functions
    var a = abs_test(0 - 10);        // 10
    var m = max_test(5, 15);          // 15
    var n = min_test(20, 10);         // 10
    var p = wyn_pow(2, 4);           // 16
    
    // Return directly
    return a + m + n + p;            // 10 + 15 + 10 + 16 = 51
}
