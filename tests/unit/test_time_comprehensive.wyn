// Comprehensive time module tests

fn days_in_month(month: int) -> int {
    if month == 1 { return 31; }
    if month == 2 { return 28; }
    if month == 3 { return 31; }
    if month == 4 { return 30; }
    if month == 5 { return 31; }
    if month == 6 { return 30; }
    if month == 7 { return 31; }
    if month == 8 { return 31; }
    if month == 9 { return 30; }
    if month == 10 { return 31; }
    if month == 11 { return 30; }
    if month == 12 { return 31; }
    return 0;
}

fn is_leap_year(year: int) -> int {
    let div4 = year % 4;
    let div100 = year % 100;
    let div400 = year % 400;
    
    if div400 == 0 { return 1; }
    if div100 == 0 { return 0; }
    if div4 == 0 { return 1; }
    return 0;
}

fn hours_to_seconds(hours: int) -> int {
    return hours * 3600;
}

fn minutes_to_seconds(minutes: int) -> int {
    return minutes * 60;
}

fn main() -> int {
    // Test 1: Days in months
    let jan = days_in_month(1);      // 31
    let feb = days_in_month(2);      // 28
    let apr = days_in_month(4);      // 30
    let dec = days_in_month(12);     // 31
    
    // Test 2: Leap years
    let leap_2024 = is_leap_year(2024);  // 1 (divisible by 4, not by 100)
    let leap_2000 = is_leap_year(2000);  // 1 (divisible by 400)
    let leap_1900 = is_leap_year(1900);  // 0 (divisible by 100, not by 400)
    let leap_2023 = is_leap_year(2023);  // 0 (not divisible by 4)
    
    // Test 3: Time conversions
    let h2s = hours_to_seconds(1);       // 3600
    let m2s = minutes_to_seconds(1);     // 60
    
    // Return sum to verify all work
    // 31+28+30+31 + 1+1+0+0 + 3600+60 = 120 + 2 + 3660 = 3782
    return jan + feb + apr + dec + leap_2024 + leap_2000 + leap_1900 + leap_2023;
}
