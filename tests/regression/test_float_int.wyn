// Test: float + int auto-promotion
fn main() -> int {
    // float + int
    var a = 3.14 + 1
    if a < 4.13 || a > 4.15 { println("FAIL: float + int"); return 1 }
    
    // int + float
    var b = 1 + 3.14
    if b < 4.13 || b > 4.15 { println("FAIL: int + float"); return 1 }
    
    // float * int
    var c = 2.5 * 2
    if c < 4.99 || c > 5.01 { println("FAIL: float * int"); return 1 }
    
    // float / int
    var d = 10.0 / 3
    if d < 3.33 || d > 3.34 { println("FAIL: float / int"); return 1 }
    
    // float > int comparison
    if !(3.14 > 3) { println("FAIL: float > int comparison"); return 1 }
    if !(1 < 1.5) { println("FAIL: int < float comparison"); return 1 }
    
    // Nested: (float + int) * int
    var e = (2.5 + 1) * 2
    if e < 6.99 || e > 7.01 { println("FAIL: nested"); return 1 }
    
    println("PASS: float+int auto-promotion works")
    return 0
}
