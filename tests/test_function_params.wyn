// TDD Test: Function parameters

fn add(a: int, b: int) -> int {
    return a + b
}

fn multiply(x: int, y: int) -> int {
    return x * y
}

fn test_add_params() -> int {
    var result = add(3, 4)
    if result == 7 {
        print("PASS: add params\n")
        return 0
    }
    return 1
}

fn test_multiply_params() -> int {
    var result = multiply(5, 6)
    if result == 30 {
        print("PASS: multiply params\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Function Parameters Tests ===\n")
    var failures = 0
    failures = failures + test_add_params()
    failures = failures + test_multiply_params()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
