// TDD Test: String index operations

fn test_string_index_of_found() -> int {
    var text = "hello world"
    var pos = text.index_of("world")
    if pos == 6 {
        print("PASS: string.index_of() found\n")
        return 0
    }
    print("FAIL: string.index_of() found\n")
    return 1
}

fn test_string_index_of_not_found() -> int {
    var text = "hello"
    var pos = text.index_of("xyz")
    if pos == -1 {
        print("PASS: string.index_of() not found\n")
        return 0
    }
    print("FAIL: string.index_of() not found\n")
    return 1
}

fn test_string_index_of_beginning() -> int {
    var text = "hello world"
    var pos = text.index_of("hello")
    if pos == 0 {
        print("PASS: string.index_of() beginning\n")
        return 0
    }
    print("FAIL: string.index_of() beginning\n")
    return 1
}

fn test_string_last_index_of() -> int {
    var text = "hello hello"
    var pos = text.last_index_of("hello")
    if pos == 6 {
        print("PASS: string.last_index_of()\n")
        return 0
    }
    print("FAIL: string.last_index_of()\n")
    return 1
}

fn main() -> int {
    print("=== String Index Tests ===\n")
    var failures = 0
    failures = failures + test_string_index_of_found()
    failures = failures + test_string_index_of_not_found()
    failures = failures + test_string_index_of_beginning()
    failures = failures + test_string_last_index_of()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
