// Test: System module

fn test_system_args() -> int {
    var args = System::args()
    var len = args.len()
    if len >= 1 {
        print("PASS: System::args\n")
        return 0
    }
    print("FAIL: System::args\n")
    return 1
}

fn test_system_env() -> int {
    var env = System::env("PATH")
    var len = env.len()
    if len > 0 {
        print("PASS: System::env\n")
        return 0
    }
    print("FAIL: System::env\n")
    return 1
}

fn main() -> int {
    print("=== System Module Tests ===\n")
    var failures = 0
    
    failures = failures + test_system_args()
    failures = failures + test_system_env()
    
    print("\n=== Summary ===\n")
    if failures == 0 {
        print("All tests PASSED!\n")
        return 0
    }
    
    print("FAILED: ")
    print(failures)
    print(" tests\n")
    return 1
}
