// TDD Test: Array slice

fn test_slice_middle() -> int {
    var nums = [1, 2, 3, 4, 5]
    var middle = nums.slice(1, 4)
    
    var val0 = middle[0]
    var val1 = middle[1]
    var val2 = middle[2]
    
    if val0 == 2 {
        if val1 == 3 {
            if val2 == 4 {
                print("PASS: array.slice(1, 4)\n")
                return 0
            }
        }
    }
    print("FAIL: slice(1, 4) wrong values\n")
    return 1
}

fn test_slice_start() -> int {
    var nums = [1, 2, 3, 4, 5]
    var start = nums.slice(0, 2)
    
    var val0 = start[0]
    var val1 = start[1]
    
    if val0 == 1 {
        if val1 == 2 {
            print("PASS: array.slice(0, 2)\n")
            return 0
        }
    }
    print("FAIL: slice(0, 2) wrong values\n")
    return 1
}

fn test_slice_end() -> int {
    var nums = [1, 2, 3, 4, 5]
    var end = nums.slice(3, 5)
    
    var val0 = end[0]
    var val1 = end[1]
    
    if val0 == 4 {
        if val1 == 5 {
            print("PASS: array.slice(3, 5)\n")
            return 0
        }
    }
    print("FAIL: slice(3, 5) wrong values\n")
    return 1
}

fn main() -> int {
    print("=== Array Slice Tests ===\n")
    var failures = 0
    failures = failures + test_slice_middle()
    failures = failures + test_slice_start()
    failures = failures + test_slice_end()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
