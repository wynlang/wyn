// TDD Test: Struct with multiple fields

struct Person {
    name: string,
    age: int,
    active: bool
}

fn test_person_create() -> int {
    var p = Person { name: "Alice", age: 30, active: 1 == 1 }
    if p.age == 30 {
        print("PASS: person create\n")
        return 0
    }
    return 1
}

fn test_person_name() -> int {
    var p = Person { name: "Bob", age: 25, active: 1 == 1 }
    var expected: string = "Bob"
    if p.name == expected {
        print("PASS: person name\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Struct Person Tests ===\n")
    var failures = 0
    failures = failures + test_person_create()
    failures = failures + test_person_name()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
