// TDD Test: Large numbers

fn test_large_positive() -> int {
    var n = 1000000
    if n == 1000000 {
        print("PASS: large positive\n")
        return 0
    }
    return 1
}

fn test_large_negative() -> int {
    var n = -1000000
    if n == -1000000 {
        print("PASS: large negative\n")
        return 0
    }
    return 1
}

fn test_large_arithmetic() -> int {
    var result = 100000 + 200000
    if result == 300000 {
        print("PASS: large arithmetic\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Large Numbers Tests ===\n")
    var failures = 0
    failures = failures + test_large_positive()
    failures = failures + test_large_negative()
    failures = failures + test_large_arithmetic()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
