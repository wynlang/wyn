// Test essential array methods

fn is_even(x: int) -> int {
    return x % 2 == 0;
}

fn main() {
    var arr = [1, 2, 3, 4, 5];
    
    print("Testing array methods:");
    
    // Test find_index
    var index = wyn_array_find_index(arr.data, arr.len, is_even);
    print("find_index(is_even): " + str(index));
    
    // Test reverse
    wyn_array_reverse(arr.data, arr.len);
    print("After reverse: " + str(arr[0]) + "," + str(arr[1]) + "," + str(arr[2]));
    
    // Test contains
    var has_3 = wyn_array_contains(arr.data, arr.len, 3);
    print("contains(3): " + str(has_3));
    
    // Test first/last
    var found: int;
    var first = wyn_array_first(arr.data, arr.len, &found);
    if (found) {
        print("first: " + str(first));
    }
    
    var last = wyn_array_last(arr.data, arr.len, &found);
    if (found) {
        print("last: " + str(last));
    }
    
    // Test is_empty
    var empty = wyn_array_is_empty(arr.data, arr.len);
    print("is_empty: " + str(empty));
    
    print("Tests completed!");
}