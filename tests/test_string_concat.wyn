// TDD Test: String concatenation

fn test_string_concat_basic() -> int {
    var a = "hello"
    var b = " world"
    var result = a.concat(b)
    var expected = "hello world"
    if result == expected {
        print("PASS: string.concat() basic\n")
        return 0
    }
    print("FAIL: string.concat() basic\n")
    return 1
}

fn test_string_concat_empty_left() -> int {
    var a = ""
    var b = "test"
    var result = a.concat(b)
    var expected = "test"
    if result == expected {
        print("PASS: string.concat() empty left\n")
        return 0
    }
    print("FAIL: string.concat() empty left\n")
    return 1
}

fn test_string_concat_empty_right() -> int {
    var a = "test"
    var b = ""
    var result = a.concat(b)
    var expected = "test"
    if result == expected {
        print("PASS: string.concat() empty right\n")
        return 0
    }
    print("FAIL: string.concat() empty right\n")
    return 1
}

fn test_string_concat_both_empty() -> int {
    var a = ""
    var b = ""
    var result = a.concat(b)
    var expected = ""
    if result == expected {
        print("PASS: string.concat() both empty\n")
        return 0
    }
    print("FAIL: string.concat() both empty\n")
    return 1
}

fn main() -> int {
    print("=== String Concatenation Tests ===\n")
    var failures = 0
    failures = failures + test_string_concat_basic()
    failures = failures + test_string_concat_empty_left()
    failures = failures + test_string_concat_empty_right()
    failures = failures + test_string_concat_both_empty()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
