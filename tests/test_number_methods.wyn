// Test: Number utility methods

fn test_to_string() -> int {
    var n = 42
    var s = n.to_string()
    if str_eq(s, "42") == 1 {
        print("PASS: to_string\n")
        return 0
    }
    print("FAIL: to_string\n")
    return 1
}

fn test_float_sqrt() -> int {
    var n = 16.0
    var result = n.sqrt()
    if result == 4.0 {
        print("PASS: sqrt\n")
        return 0
    }
    print("FAIL: sqrt\n")
    return 1
}

fn test_float_floor() -> int {
    var n = 3.7
    var result = n.floor()
    if result == 3.0 {
        print("PASS: floor\n")
        return 0
    }
    print("FAIL: floor\n")
    return 1
}

fn test_float_ceil() -> int {
    var n = 3.2
    var result = n.ceil()
    if result == 4.0 {
        print("PASS: ceil\n")
        return 0
    }
    print("FAIL: ceil\n")
    return 1
}

fn test_float_round() -> int {
    var n = 3.6
    var result = n.round()
    if result == 4.0 {
        print("PASS: round\n")
        return 0
    }
    print("FAIL: round\n")
    return 1
}

fn main() -> int {
    print("=== Number Methods Tests ===\n")
    var failures = 0
    
    failures = failures + test_to_string()
    failures = failures + test_float_sqrt()
    failures = failures + test_float_floor()
    failures = failures + test_float_ceil()
    failures = failures + test_float_round()
    
    print("\n=== Summary ===\n")
    if failures == 0 {
        print("All tests PASSED!\n")
        return 0
    }
    
    print("FAILED: ")
    print(failures)
    print(" tests\n")
    return 1
}
