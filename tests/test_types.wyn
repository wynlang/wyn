// TDD Test: Type operations

fn test_int_type() -> int {
    var x = 42
    if x == 42 {
        print("PASS: int type\n")
        return 0
    }
    print("FAIL: int type\n")
    return 1
}

fn test_string_type() -> int {
    var s = "test"
    var expected = "test"
    if s == expected {
        print("PASS: string type\n")
        return 0
    }
    print("FAIL: string type\n")
    return 1
}

fn test_array_type() -> int {
    var arr = [1, 2, 3]
    if arr.len() == 3 {
        print("PASS: array type\n")
        return 0
    }
    print("FAIL: array type\n")
    return 1
}

fn main() -> int {
    print("=== Type Tests ===\n")
    var failures = 0
    failures = failures + test_int_type()
    failures = failures + test_string_type()
    failures = failures + test_array_type()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
