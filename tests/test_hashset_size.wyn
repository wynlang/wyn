// TDD Test: HashSet size operations

fn test_empty_set_size() -> int {
    var set = HashSet::new()
    if set.len() == 0 {
        print("PASS: empty set size\n")
        return 0
    }
    return 1
}

fn test_size_after_add() -> int {
    var set = HashSet::new()
    set.add("item1")
    set.add("item2")
    if set.len() == 2 {
        print("PASS: size after add\n")
        return 0
    }
    return 1
}

fn test_size_after_remove() -> int {
    var set = HashSet::new()
    set.add("a")
    set.add("b")
    set.remove("a")
    if set.len() == 1 {
        print("PASS: size after remove\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== HashSet Size Tests ===\n")
    var failures = 0
    failures = failures + test_empty_set_size()
    failures = failures + test_size_after_add()
    failures = failures + test_size_after_remove()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
