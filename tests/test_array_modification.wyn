// TDD Test: Array modification operations

fn test_array_modify_element() -> int {
    var arr = [1, 2, 3]
    arr[1] = 99
    if arr[1] == 99 {
        print("PASS: array modify element\n")
        return 0
    }
    print("FAIL: array modify element\n")
    return 1
}

fn test_array_push_then_access() -> int {
    var arr = [1, 2]
    arr.push(3)
    if arr[2] == 3 {
        print("PASS: array push then access\n")
        return 0
    }
    print("FAIL: array push then access\n")
    return 1
}

fn test_array_pop_then_len() -> int {
    var arr = [1, 2, 3]
    arr.pop()
    if arr.len() == 2 {
        print("PASS: array pop then len\n")
        return 0
    }
    print("FAIL: array pop then len\n")
    return 1
}

fn main() -> int {
    print("=== Array Modification Tests ===\n")
    var failures = 0
    failures = failures + test_array_modify_element()
    failures = failures + test_array_push_then_access()
    failures = failures + test_array_pop_then_len()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
