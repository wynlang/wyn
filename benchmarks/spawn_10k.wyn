// Spawn 10K tasks â€” lightweight concurrency
// Tests: task creation overhead, scheduler throughput

fn work(id: int) -> int {
    return id * id
}

fn main() -> int {
    var total = 0
    for i in 0..10000 {
        var result = spawn work(i)
        total = total + await result
    }
    println("10K tasks, sum = ${total}")
    return 0
}
