// EPIC 1 VALIDATION: Task 1.8 - Struct Field Access
// This is the main feature we implemented

struct Point {
    x: int
    y: int
}

struct Color {
    r: int
    g: int
    b: int
}

fn main() -> int {
    // Test 1: Basic field read
    var p = Point { x: 10, y: 20 }
    if p.x != 10 { return 1; }
    if p.y != 20 { return 2; }
    
    // Test 2: Field in arithmetic
    var sum = p.x + p.y
    if sum != 30 { return 3; }
    
    // Test 3: Field in comparison
    if p.x >= p.y { return 4; }
    if p.y <= p.x { return 5; }
    
    // Test 4: Multiple struct instances
    var p2 = Point { x: 5, y: 15 }
    if p.x + p2.x != 15 { return 6; }
    
    // Test 5: Different struct type
    var c = Color { r: 255, g: 128, b: 64 }
    if c.r != 255 { return 7; }
    if c.g != 128 { return 8; }
    if c.b != 64 { return 9; }
    
    // Test 6: Field access in return
    return 0
}
