// TDD Test: For loop operations

fn test_for_array_iteration() -> int {
    var arr = [1, 2, 3, 4, 5]
    var sum = 0
    for item in arr {
        sum = sum + item
    }
    if sum == 15 {
        print("PASS: for array iteration\n")
        return 0
    }
    print("FAIL: for array iteration\n")
    return 1
}

fn test_for_empty_array() -> int {
    var arr = []
    var count = 0
    for item in arr {
        count = count + 1
    }
    if count == 0 {
        print("PASS: for empty array\n")
        return 0
    }
    print("FAIL: for empty array\n")
    return 1
}

fn test_for_single_element() -> int {
    var arr = [42]
    var result = 0
    for item in arr {
        result = item
    }
    if result == 42 {
        print("PASS: for single element\n")
        return 0
    }
    print("FAIL: for single element\n")
    return 1
}

fn main() -> int {
    print("=== For Loop Tests ===\n")
    var failures = 0
    failures = failures + test_for_array_iteration()
    failures = failures + test_for_empty_array()
    failures = failures + test_for_single_element()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
