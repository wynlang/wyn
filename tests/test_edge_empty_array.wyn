// TDD Test: Edge cases - empty array operations

fn test_empty_array_len() -> int {
    var arr: [int] = []
    if arr.len() == 0 {
        print("PASS: empty array len\n")
        return 0
    }
    return 1
}

fn test_empty_array_contains() -> int {
    var arr: [int] = []
    var has_item = arr.contains(42)
    if has_item == 0 {
        print("PASS: empty array contains\n")
        return 0
    }
    return 1
}

fn test_empty_array_push() -> int {
    var arr: [int] = []
    arr.push(1)
    if arr.len() == 1 {
        print("PASS: empty array push\n")
        return 0
    }
    return 1
}

fn test_empty_array_clear() -> int {
    var arr: [int] = []
    arr.clear()
    if arr.len() == 0 {
        print("PASS: empty array clear\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Empty Array ===\n")
    var failures = 0
    failures = failures + test_empty_array_len()
    failures = failures + test_empty_array_contains()
    failures = failures + test_empty_array_push()
    failures = failures + test_empty_array_clear()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
