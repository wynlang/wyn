// TDD: Basic HTTP client
// Note: requires network access, tests against a public endpoint

fn main() -> int {
    // Test: HTTP GET request
    var response: string = Http.get("http://httpbin.org/get")
    var rlen = response.len()
    if rlen > 0 {
        println("HTTP GET: received " + rlen.to_string() + " bytes")
        // Check it contains expected JSON
        if response.contains("httpbin") {
            println("  ✓ Response contains expected content")
        } else {
            println("  ✗ Unexpected response")
        }
    } else {
        // Network might not be available - that's OK for CI
        println("SKIP: No network access")
    }

    return 0
}
