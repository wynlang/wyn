fn array_sum_test(arr: [int], len: int) -> int {
    var total = 0;
    var i = 0;
    while i < len {
        total = total + arr[i];
        i = i + 1;
    }
    return total;
}

fn array_max_test(arr: [int], len: int) -> int {
    if len == 0 { return 0; }
    var maximum = arr[0];
    var i = 1;
    while i < len {
        if arr[i] > maximum {
            maximum = arr[i];
        }
        i = i + 1;
    }
    return maximum;
}

fn main() -> int {
    // Test with different arrays
    var arr1 = [10, 20, 30];
    var s1 = array_sum_test(arr1, 3);        // 60
    var m1 = array_max_test(arr1, 3);        // 30
    
    var arr2 = [5, 15, 25, 35];
    var s2 = array_sum_test(arr2, 4);        // 80
    var m2 = array_max_test(arr2, 4);        // 35
    
    // Should return 60+30+80+35 = 205
    return s1 + m1 + s2 + m2;
}
