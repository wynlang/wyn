// TDD Test: Time module operations

fn test_time_now() -> int {
    var t1 = Time::now()
    var t2 = Time::now()
    
    if t2 >= t1 {
        print("PASS: Time::now()\n")
        return 0
    }
    print("FAIL: Time::now() should be monotonic\n")
    return 1
}

fn test_time_now_positive() -> int {
    var t = Time::now()
    
    if t > 0 {
        print("PASS: Time::now() positive\n")
        return 0
    }
    print("FAIL: Time::now() should be positive\n")
    return 1
}

fn main() -> int {
    print("=== Time Module Tests ===\n")
    var failures = 0
    failures = failures + test_time_now()
    failures = failures + test_time_now_positive()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
