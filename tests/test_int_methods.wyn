// TDD Test: Integer methods (abs, max, min)

fn test_abs_positive() -> int {
    var n = 5
    var result = n.abs()
    if result == 5 {
        print("PASS: abs() positive\n")
        return 0
    }
    print("FAIL: abs(5) expected 5\n")
    return 1
}

fn test_abs_negative() -> int {
    var n = -5
    var result = n.abs()
    if result == 5 {
        print("PASS: abs() negative\n")
        return 0
    }
    print("FAIL: abs(-5) expected 5\n")
    return 1
}

fn test_max() -> int {
    var a = 10
    var result = a.max(20)
    if result == 20 {
        print("PASS: max()\n")
        return 0
    }
    print("FAIL: max(10, 20) expected 20\n")
    return 1
}

fn test_min() -> int {
    var a = 10
    var result = a.min(20)
    if result == 10 {
        print("PASS: min()\n")
        return 0
    }
    print("FAIL: min(10, 20) expected 10\n")
    return 1
}

fn main() -> int {
    print("=== Integer Methods Tests ===\n")
    var failures = 0
    failures = failures + test_abs_positive()
    failures = failures + test_abs_negative()
    failures = failures + test_max()
    failures = failures + test_min()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
