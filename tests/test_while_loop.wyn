// TDD Test: While loop operations

fn test_while_basic() -> int {
    var count = 0
    var i = 0
    while i < 5 {
        count = count + 1
        i = i + 1
    }
    if count == 5 {
        print("PASS: while basic\n")
        return 0
    }
    print("FAIL: while basic\n")
    return 1
}

fn test_while_zero_iterations() -> int {
    var count = 0
    var i = 10
    while i < 5 {
        count = count + 1
        i = i + 1
    }
    if count == 0 {
        print("PASS: while zero iterations\n")
        return 0
    }
    print("FAIL: while zero iterations\n")
    return 1
}

fn test_while_accumulator() -> int {
    var sum = 0
    var i = 1
    while i <= 5 {
        sum = sum + i
        i = i + 1
    }
    if sum == 15 {
        print("PASS: while accumulator\n")
        return 0
    }
    print("FAIL: while accumulator\n")
    return 1
}

fn main() -> int {
    print("=== While Loop Tests ===\n")
    var failures = 0
    failures = failures + test_while_basic()
    failures = failures + test_while_zero_iterations()
    failures = failures + test_while_accumulator()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
