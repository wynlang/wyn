// TDD Test: Empty string operations

fn test_empty_string_len() -> int {
    var s: string = ""
    if s.len() == 0 {
        print("PASS: empty string len\n")
        return 0
    }
    return 1
}

fn test_empty_string_comparison() -> int {
    var s1: string = ""
    var s2: string = ""
    if s1 == s2 {
        print("PASS: empty string comparison\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Empty String Tests ===\n")
    var failures = 0
    failures = failures + test_empty_string_len()
    failures = failures + test_empty_string_comparison()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
