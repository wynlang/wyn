// Comprehensive test of all working features

struct Point {
    x: int,
    y: int
}

enum Status {
    PENDING,
    RUNNING,
    DONE
}

fn identity<T>(val: T) -> T {
    return val;
}

fn main() -> int {
    // 1. Variables (mutable and immutable)
    var x = 10;
    var y = 20;
    y = 30;
    
    // 2. Structs
    var p = Point { x: 5, y: 10 };
    var sum = p.x + p.y;
    
    // 3. Arrays
    var arr = [1, 2, 3];
    var first = arr[0];
    
    // 4. Enums
    var status = DONE;
    
    // 5. Generics
    var val = identity(42);
    
    // 6. Control flow (if/else)
    if val == 42 {
        var temp = 1;
    } else {
        var temp = 0;
    }
    
    // 7. Loops (while)
    var counter = 0;
    while counter < 3 {
        counter = counter + 1;
    }
    
    // 8. Loops (for)
    var total = 0;
    for i in 0..5 {
        total = total + i;
    }
    
    // 9. Pattern matching (expression)
    var result = match val {
        42 => 100,
        _ => 0
    };
    
    // 10. Pattern matching (statement)
    match result {
        100 => return 99,
        _ => return 0
    }
}
