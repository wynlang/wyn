// Test: String contains method
// Tests the .contains() method for strings

fn test_contains_basic() -> int {
    var s = "hello world"
    var result = s.contains("world")
    if result == 1 {
        print("PASS: contains basic\n")
        return 0
    }
    print("FAIL: contains basic\n")
    return 1
}

fn test_contains_not_found() -> int {
    var s = "hello world"
    var result = s.contains("xyz")
    if result == 0 {
        print("PASS: contains not found\n")
        return 0
    }
    print("FAIL: contains not found\n")
    return 1
}

fn test_contains_empty() -> int {
    var s = "hello"
    var result = s.contains("")
    if result == 1 {
        print("PASS: contains empty\n")
        return 0
    }
    print("FAIL: contains empty\n")
    return 1
}

fn test_contains_at_start() -> int {
    var s = "hello world"
    var result = s.contains("hello")
    if result == 1 {
        print("PASS: contains at start\n")
        return 0
    }
    print("FAIL: contains at start\n")
    return 1
}

fn test_contains_at_end() -> int {
    var s = "hello world"
    var result = s.contains("world")
    if result == 1 {
        print("PASS: contains at end\n")
        return 0
    }
    print("FAIL: contains at end\n")
    return 1
}

fn main() -> int {
    print("=== String Contains Tests ===\n")
    var failures = 0
    
    failures = failures + test_contains_basic()
    failures = failures + test_contains_not_found()
    failures = failures + test_contains_empty()
    failures = failures + test_contains_at_start()
    failures = failures + test_contains_at_end()
    
    print("\n=== Summary ===\n")
    if failures == 0 {
        print("All tests PASSED!\n")
        return 0
    }
    
    print("FAILED: ")
    print(failures)
    print(" tests\n")
    return 1
}
