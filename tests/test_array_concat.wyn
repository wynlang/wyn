// TDD Test: Array concat and join

fn test_array_concat() -> int {
    var arr1 = [1, 2, 3]
    var arr2 = [4, 5, 6]
    var result = arr1.concat(arr2)
    
    var size = result.len()
    if size == 6 {
        var val0 = result[0]
        var val5 = result[5]
        if val0 == 1 {
            if val5 == 6 {
                print("PASS: array.concat()\n")
                return 0
            }
        }
    }
    print("FAIL: array.concat()\n")
    return 1
}

fn test_array_concat_empty() -> int {
    var arr1 = [1, 2]
    var arr2 = []
    var result = arr1.concat(arr2)
    
    var size = result.len()
    if size == 2 {
        print("PASS: array.concat() with empty\n")
        return 0
    }
    print("FAIL: array.concat() with empty\n")
    return 1
}

fn main() -> int {
    print("=== Array Concat/Join Tests ===\n")
    var failures = 0
    failures = failures + test_array_concat()
    failures = failures + test_array_concat_empty()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
