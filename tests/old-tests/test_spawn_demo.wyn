// Quick test to verify spawn works

fn worker(id: int) {
    var result = id * 10
    var i = 0
    while i < 100 {
        result = result + 1
        i = i + 1
    }
}

fn main() -> int {
    print("Testing spawn with 10 workers...\n")
    
    var i = 0
    while i < 10 {
        spawn worker(i)
        i = i + 1
    }
    
    print("✓ All 10 workers spawned successfully!\n")
    print("✓ Spawn is working!\n")
    
    return 0
}
