// TDD Test: Return value operations

fn return_int() -> int {
    return 42
}

fn return_string() -> int {
    return 0
}

fn return_early(x: int) -> int {
    if x > 10 {
        return 1
    }
    return 0
}

fn test_return_int() -> int {
    var result = return_int()
    if result == 42 {
        print("PASS: return int\n")
        return 0
    }
    print("FAIL: return int\n")
    return 1
}

fn test_return_early_true() -> int {
    var result = return_early(15)
    if result == 1 {
        print("PASS: return early true\n")
        return 0
    }
    print("FAIL: return early true\n")
    return 1
}

fn test_return_early_false() -> int {
    var result = return_early(5)
    if result == 0 {
        print("PASS: return early false\n")
        return 0
    }
    print("FAIL: return early false\n")
    return 1
}

fn test_return_from_main() -> int {
    print("PASS: return from main\n")
    return 0
}

fn main() -> int {
    print("=== Return Value Tests ===\n")
    var failures = 0
    failures = failures + test_return_int()
    failures = failures + test_return_early_true()
    failures = failures + test_return_early_false()
    failures = failures + test_return_from_main()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
