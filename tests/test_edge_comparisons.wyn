// TDD Test: Edge cases - comparisons

fn test_equal_zero() -> int {
    var n = 0
    if n == 0 {
        print("PASS: equal zero\n")
        return 0
    }
    return 1
}

fn test_not_equal_zero() -> int {
    var n = 1
    if n != 0 {
        print("PASS: not equal zero\n")
        return 0
    }
    return 1
}

fn test_negative_comparison() -> int {
    if -5 < 0 {
        print("PASS: negative comparison\n")
        return 0
    }
    return 1
}

fn test_equal_negatives() -> int {
    var a = -10
    var b = -10
    if a == b {
        print("PASS: equal negatives\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Comparisons ===\n")
    var failures = 0
    failures = failures + test_equal_zero()
    failures = failures + test_not_equal_zero()
    failures = failures + test_negative_comparison()
    failures = failures + test_equal_negatives()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
