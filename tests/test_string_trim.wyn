// TDD Test: String trim operations

fn test_string_trim_both() -> int {
    var text = "  hello  "
    var trimmed = text.trim()
    var expected = "hello"
    if trimmed == expected {
        print("PASS: string.trim() both sides\n")
        return 0
    }
    print("FAIL: string.trim() both sides\n")
    return 1
}

fn test_string_trim_left_only() -> int {
    var text = "  hello"
    var trimmed = text.trim()
    var expected = "hello"
    if trimmed == expected {
        print("PASS: string.trim() left only\n")
        return 0
