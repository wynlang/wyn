// TDD Test: For loop comprehensive

fn test_for_count() -> int {
    var count = 0
    for i in 0..5 {
        count = count + 1
    }
    if count == 5 {
        print("PASS: for count\n")
        return 0
    }
    return 1
}

fn test_for_sum() -> int {
    var sum = 0
    for i in 1..4 {
        sum = sum + i
    }
    if sum == 6 {
        print("PASS: for sum\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== For Comprehensive Tests ===\n")
    var failures = 0
    failures = failures + test_for_count()
    failures = failures + test_for_sum()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
