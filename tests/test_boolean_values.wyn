// TDD Test: Boolean values

fn test_true_value() -> int {
    var b = 1 == 1
    if b {
        print("PASS: true value\n")
        return 0
    }
    return 1
}

fn test_false_value() -> int {
    var b = 1 == 2
    if !b {
        print("PASS: false value\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Boolean Values Tests ===\n")
    var failures = 0
    failures = failures + test_true_value()
    failures = failures + test_false_value()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
