// TDD Test: While comprehensive

fn test_while_count() -> int {
    var count = 0
    var i = 0
    while i < 5 {
        count = count + 1
        i = i + 1
    }
    if count == 5 {
        print("PASS: while count\n")
        return 0
    }
    return 1
}

fn test_while_sum() -> int {
    var sum = 0
    var i = 1
    while i <= 3 {
        sum = sum + i
        i = i + 1
    }
    if sum == 6 {
        print("PASS: while sum\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== While Comprehensive Tests ===\n")
    var failures = 0
    failures = failures + test_while_count()
    failures = failures + test_while_sum()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
