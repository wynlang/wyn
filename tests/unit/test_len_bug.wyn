// TDD Test: len() truncation bug
fn main() -> int {
    // Test with very long string (>2^31 would overflow, but let's test large values)
    var text = "This is a reasonably long string to test if length calculation works properly without truncation issues in the LLVM codegen";
    var length = len(text);
    
    println("Length:");
    println(length);
    
    // Expected: 123 characters
    if (length == 123) {
        println("✓ len() works correctly!");
        return 0;
    } else {
        println("✗ len() returned wrong value");
        return 1;
    }
}
