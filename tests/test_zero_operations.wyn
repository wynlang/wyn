// TDD Test: Zero operations

fn test_zero_addition() -> int {
    var result = 5 + 0
    if result == 5 {
        print("PASS: zero addition\n")
        return 0
    }
    return 1
}

fn test_zero_multiplication() -> int {
    var result = 42 * 0
    if result == 0 {
        print("PASS: zero multiplication\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Zero Operations Tests ===\n")
    var failures = 0
    failures = failures + test_zero_addition()
    failures = failures + test_zero_multiplication()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
