// TDD Test: String length operations

fn test_string_len_empty() -> int {
    var s = ""
    var size = s.len()
    if size == 0 {
        print("PASS: string.len() empty\n")
        return 0
    }
    print("FAIL: string.len() empty\n")
    return 1
}

fn test_string_len_single() -> int {
    var s = "a"
    var size = s.len()
    if size == 1 {
        print("PASS: string.len() single\n")
        return 0
    }
    print("FAIL: string.len() single\n")
    return 1
}

fn test_string_len_normal() -> int {
    var s = "hello"
    var size = s.len()
    if size == 5 {
        print("PASS: string.len() normal\n")
        return 0
    }
    print("FAIL: string.len() normal\n")
    return 1
}

fn test_string_len_spaces() -> int {
    var s = "a b c"
    var size = s.len()
    if size == 5 {
        print("PASS: string.len() with spaces\n")
        return 0
    }
    print("FAIL: string.len() with spaces\n")
    return 1
}

fn main() -> int {
    print("=== String Length Tests ===\n")
    var failures = 0
    failures = failures + test_string_len_empty()
    failures = failures + test_string_len_single()
    failures = failures + test_string_len_normal()
    failures = failures + test_string_len_spaces()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
