// TDD Test: Edge cases - array sort edge cases

fn test_sort_empty() -> int {
    var arr: [int] = []
    arr.sort()
    if arr.len() == 0 {
        print("PASS: sort empty\n")
        return 0
    }
    return 1
}

fn test_sort_single() -> int {
    var arr: [int] = [42]
    arr.sort()
    if arr[0] == 42 {
        print("PASS: sort single\n")
        return 0
    }
    return 1
}

fn test_sort_already_sorted() -> int {
    var arr: [int] = [1, 2, 3]
    arr.sort()
    if arr[0] == 1 {
        print("PASS: sort already sorted\n")
        return 0
    }
    return 1
}

fn test_sort_reverse_order() -> int {
    var arr: [int] = [3, 2, 1]
    arr.sort()
    if arr[0] == 1 {
        print("PASS: sort reverse order\n")
        return 0
    }
    return 1
}

fn main() -> int {
    print("=== Edge Cases: Array Sort ===\n")
    var failures = 0
    failures = failures + test_sort_empty()
    failures = failures + test_sort_single()
    failures = failures + test_sort_already_sorted()
    failures = failures + test_sort_reverse_order()
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
