// TDD Test: Array reverse and sort

fn test_array_reverse() -> int {
    var arr = [1, 2, 3, 4, 5]
    arr.reverse()
    
    var val0 = arr[0]
    var val4 = arr[4]
    
    if val0 == 5 {
        if val4 == 1 {
            print("PASS: array.reverse()\n")
            return 0
        }
    }
    print("FAIL: array.reverse()\n")
    return 1
}

fn test_array_sort() -> int {
    var arr = [5, 2, 8, 1, 9]
    arr.sort()
    
    var val0 = arr[0]
    var val4 = arr[4]
    
    if val0 == 1 {
        if val4 == 9 {
            print("PASS: array.sort()\n")
            return 0
        }
    }
    print("FAIL: array.sort()\n")
    return 1
}

fn test_array_sort_already_sorted() -> int {
    var arr = [1, 2, 3]
    arr.sort()
    
    var val0 = arr[0]
    var val2 = arr[2]
    
    if val0 == 1 {
        if val2 == 3 {
            print("PASS: array.sort() already sorted\n")
            return 0
        }
    }
    print("FAIL: array.sort() already sorted\n")
    return 1
}

fn main() -> int {
    print("=== Array Reverse/Sort Tests ===\n")
    var failures = 0
    failures = failures + test_array_reverse()
    failures = failures + test_array_sort()
    failures = failures + test_array_sort_already_sorted()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
