// TDD Test: Number to string conversions

fn test_int_to_string_positive() -> int {
    var n = 42
    var s = n.to_string()
    var expected = "42"
    if s == expected {
        print("PASS: int.to_string() positive\n")
        return 0
    }
    print("FAIL: int.to_string() positive\n")
    return 1
}

fn test_int_to_string_negative() -> int {
    var n = -42
    var s = n.to_string()
    var expected = "-42"
    if s == expected {
        print("PASS: int.to_string() negative\n")
        return 0
    }
    print("FAIL: int.to_string() negative\n")
    return 1
}

fn test_int_to_string_zero() -> int {
    var n = 0
    var s = n.to_string()
    var expected = "0"
    if s == expected {
        print("PASS: int.to_string() zero\n")
        return 0
    }
    print("FAIL: int.to_string() zero\n")
    return 1
}

fn test_int_to_string_large() -> int {
    var n = 12345
    var s = n.to_string()
    var expected = "12345"
    if s == expected {
        print("PASS: int.to_string() large\n")
        return 0
    }
    print("FAIL: int.to_string() large\n")
    return 1
}

fn main() -> int {
    print("=== Number Conversion Tests ===\n")
    var failures = 0
    failures = failures + test_int_to_string_positive()
    failures = failures + test_int_to_string_negative()
    failures = failures + test_int_to_string_zero()
    failures = failures + test_int_to_string_large()
    
    if failures == 0 {
        print("\nAll tests PASSED!\n")
    }
    return failures
}
